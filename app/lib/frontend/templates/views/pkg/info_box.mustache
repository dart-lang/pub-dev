{{#publisher_id}}
<h3 class="title">Publisher</h3>
<p>
  <a href="{{& publisher_link}}"><img
          class="-pub-publisher-shield"
          height="22" width="22"
          title="Published by a pub.dev verified publisher"
          src="/static/img/verified-publisher-blue.svg" />{{publisher_id}}</a>
</p>
{{/publisher_id}}

<h3 class="title">About</h3>
{{#description}}
  <p>{{description}}</p>
{{/description}}
<p>
  {{#links}}
  <a class="link" href="{{& href}}">{{label}}</a><br/>
  {{/links}}
</p>

{{#has_authors}}
<h3 class="title">{{authors_title}}</h3>
<div>{{& authors_html}}</div>
{{/has_authors}}

{{#uploaders_html}}
<h3 class="title">{{uploaders_title}}</h3>
<p>{{& uploaders_html}}</p>
{{/uploaders_html}}

{{#license_html}}
<h3 class="title">License</h3>
<p>{{& license_html}}</p>
{{/license_html}}

{{#dependencies_html}}
<h3 class="title">Dependencies</h3>
<p>{{& dependencies_html}}</p>
{{/dependencies_html}}

<h3 class="title">More</h3>
<p><a href="{{{search_deps_link}}}" rel="nofollow">Packages that depend on {{name}}</a></p>
